---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeader from "../components/SectionHeader";
import Button from "../components/Button";
import Badge from "../components/Badge";
import ValuePropCard from "../components/ValuePropCard";
---
<BaseLayout title="Styleguide">
  <SectionHeader eyebrow="Design Tokens" title="Conor Styleguide" blurb="Colors, typography, components." />
  <section class="container-responsive grid md:grid-cols-2 gap-6">
    <div class="card">
      <h3 class="font-semibold text-conor-primary">Buttons</h3>
      <div class="mt-4 flex gap-3">
        <Button variant="primary" client:load>Primary</Button>
        <Button variant="ghost" client:load>Ghost</Button>
      </div>
    </div>
    <div class="card">
      <h3 class="font-semibold text-conor-primary">Badges</h3>
      <div class="mt-4 space-x-2">
        <Badge>Badge</Badge>
        <Badge>New</Badge>
      </div>
    </div>
    <div class="card md:col-span-2">
      <h3 class="font-semibold text-conor-primary">Cards</h3>
      <div class="mt-4 grid md:grid-cols-3 gap-4">
        <ValuePropCard title="Experienced Educators" desc="Our coaches bring classroom expertise and real-world empathy." />
        <ValuePropCard title="Personalized Guidance" desc="Tailored plans and 1:1 check-ins keep progress on track." />
        <ValuePropCard title="Community & Parents" desc="Transparent updates and workshops." />
      </div>
    </div>
  </section>
</BaseLayout>
